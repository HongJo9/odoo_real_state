<odoo>
    <record id="view_users_form_inherit_peso" model="ir.ui.view">
        <field name="name">res.users.form.inherit.peso</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='login']" position="after">
                <group>
                    <field name="peso" />
                    <field name="estado_peso" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>