<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Accion de tipo de propiedades -->
    <record id="action_estate_property_type" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Vista -->
    <record id="view_estate_property_type_tree" model="ir.ui.view">
        <field name="name">estate.property.type.tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Tipos de Propiedad">
                <field name="sequence" widget="handle" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <!-- formulario -->
    <record id="view_estate_property_type_form" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Tipo de Propiedad">
                <div class="oe_button_box" name="button_box">
                    <button string="Ver Ofertas" name="%(action_estate_property_offer_type)d"
                        type="action"
                        class="oe_stat_button" icon="fa-bar-chart">
                        <field name="offer_count" widget="statinfo" string="Ofertas" />
                    </button>
                </div>
                <sheet>
                    <group>
                        <field name="name" />
                    </group>

                    <notebook>
                        <page string="Propiedades">
                            <field name="property_ids">
                                <tree>
                                    <field name="name" />
                                    <field name="expected_price" />
                                    <field name="state" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

            </form>
        </field>
    </record>


</odoo>