<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Accion de tipo de propiedades -->
    <record id="action_estate_property_offer" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Vista TREE de ofertas -->
    <record id="view_estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Property Offers">
                <field name="price" />
                <field name="partner_id" />
                <field name="validity" string="Validity (days)" />
                <field name="date_deadline" string="Deadline" />
                <field name="status" />
            </tree>
        </field>
    </record>

    <!-- Estadistica de ofertas desde los tipos de propiedades -->
    <record id="action_estate_property_offer_type" model="ir.actions.act_window">
        <field name="name">Ofertas</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>


</odoo>