<odoo>
    <!-- Acción -->
    <record id="action_mi_biblioteca_author" model="ir.actions.act_window">
        <field name="name">Autores</field>
        <field name="res_model">mi_biblioteca.author</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Sub menú Autores -->
    <menuitem id="menu_mi_biblioteca_autores" name="Autores" parent="menu_biblioteca_root"
        sequence="20"
        action="action_mi_biblioteca_author" />

    <!-- vista lista -->    
    <record id="view_mi_biblioteca_author_tree" model="ir.ui.view">
        <field name="name">mi_biblioteca.author.tree</field>
        <field name="model">mi_biblioteca.author</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="libros_ids" />
            </tree>
        </field>
    </record>

    <!-- vista formulario -->
    <record id="view_mi_biblioteca_author_form" model="ir.ui.view">
        <field name="name">mi_biblioteca.author.form</field>
        <field name="model">mi_biblioteca.author</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" />
                    <field name="libros_ids" widget="many2many_tags" />
                </group>
            </form>
        </field>
    </record>
</odoo>