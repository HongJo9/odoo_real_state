<odoo>
    <!-- Acción -->
    <record id="action_libros" model="ir.actions.act_window">
        <field name="name">Libros</field>
        <field name="res_model">mi_biblioteca.libro</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_biblioteca_root" name="Biblioteca" sequence="10" />

    <!-- Sub menú Libros -->
    <menuitem id="menu_biblioteca_libros" name="Libros" parent="menu_biblioteca_root" sequence="10"
        action="action_libros" />

    <!-- vista lista -->
    <record id="view_libro_tree" model="ir.ui.view">
        <field name="name">mi_biblioteca.libro.tree</field>
        <field name="model">mi_biblioteca.libro</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="author_id" />
                <field name="fecha_publicacion" />
                <field name="paginas" />
                <field name="disponible" />
                <field name="category_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>

    <!-- vista formulario -->
    <record id="view_libro_form" model="ir.ui.view">
        <field name="name">mi_biblioteca.libro.form</field>
        <field name="model">mi_biblioteca.libro</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" />
                    <field name="author_id" />
                    <field name="fecha_publicacion" />
                    <field name="paginas" />
                    <field name="disponible" />
                    <field name="category_ids" widget="many2many_tags" />
                </group>
            </form>
        </field>
    </record>
</odoo>